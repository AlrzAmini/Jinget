@using Jinget.Blazor.Attributes.Input
@using MudBlazor
@inherits JingetInputBase;

<MudTextField id="@Id"
              Class="@CssClass"
              @bind-Value="Value"
              Label="@DisplayName"
              HelperText="@HelperText"
              Disabled=@IsDisabled
              ReadOnly=@IsReadOnly
              InputType=@InputType
              Lines=@Rows
              Required=@IsRequired
              RequiredError="@RequiredError"
              Variant="Variant.Outlined"
              TextChanged="OnTextChanged"
              Converter="StringConverter" />