@page "/popup/messageBox"
@using Jinget.Blazor.Components.Popup

<button @onclick=@ShowModal1 class="btn btn-primary">Show Message Box(LTR)</button>


<JingetMessageBox @ref=@mbox1
                  ShowVerboseFunc="@ShowVerboseCondition"
                  Rtl=false
                  CloseButtonText="Close">

</JingetMessageBox>

@code {
    JingetMessageBox? mbox1 { get; set; }

    async Task ShowModal1() => await mbox1?.OpenAsync(
        title: "Sample message box",
        content: "This is sample message box",
        verboseContent: "This is vebose content",
        isFancy: false,
        theme: MudBlazor.Severity.Normal);

    bool ShowVerboseCondition()
    {
        return true;
    }
}